<h1>Шинэ хэрэглэгч:</h1>
<%= form_with model: @user, method: :post, url: users_path, local: true do |form| %>
 <div class="mx-auto">
    <div>
      <%= form.label :email %>
      <%= form.email_field :email, class: 'form-control' %>
    </div>

    <div>
      <%= form.label :password %>
      <%= form.password_field :password, class: 'form-control' %>
    </div>

    <div>
      <%= form.label :password %>
      <%= form.password_field :password_confirmation, class: 'form-control' %>
    </div>

    <%= form.submit 'нэмэх' %>
  </div>
<% end %>
