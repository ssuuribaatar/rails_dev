<h1>Хэрэглэгчийн мэйл: <%= @user.email %></h1>
<!-- #edit.html.erb -->
<%= form_with scope: :user, url: user_path(@user), method: :patch, local: true do |form| %>
  <div class="mx-auto">
    <div>
      <%= form.label :email %>
      <%= form.email_field :email, class: 'form-control' %>
    </div>

    <div>
      <%= form.label :password %>
      <%= form.password_field :password, class: 'form-control' %>
    </div>

    <div>
      <%= form.label :password %>
      <%= form.password_field :password_confirmation, class: 'form-control' %>
    </div>

    <%= form.submit 'засварлах' %>
  </div>
<% end %>
